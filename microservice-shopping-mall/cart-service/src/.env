# cart-service/.env
NODE_ENV=development
PORT=3006

# PostgreSQL 데이터베이스 설정
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shopping_mall_carts
DB_USER=postgres
DB_PASSWORD=rlarkdmf
DB_POOL_SIZE=10
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# Redis 캐시 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_KEY_PREFIX=cart-service:
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100

# 캐시 TTL 설정 (초 단위)
CACHE_DEFAULT_TTL=300
CACHE_CART_TTL=1800
CACHE_USER_CART_TTL=3600

# CORS 설정
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# 외부 서비스 URL
API_GATEWAY_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
PRODUCT_SERVICE_URL=http://localhost:3003

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-for-cart-service

# 로깅 설정
LOG_LEVEL=debug
LOG_FORMAT=json

# 요청 제한 설정
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# 장바구니 설정
MAX_CART_ITEMS=50
SESSION_CART_EXPIRY_DAYS=30

# 개발 도구
ENABLE_SWAGGER=true
SWAGGER_PATH=/api/docs